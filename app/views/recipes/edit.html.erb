<%= form_for @recipe do |f| %>

<br>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name , class: "form-control", id: "exampleInputEmail1", placeholder: "Enter Recipe Name" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" , placeholder: "Enter Password" %>
  </div>
  <br>
  <%= f.submit "Update Recipe" , class: "btn btn-primary" %>

<% end %>
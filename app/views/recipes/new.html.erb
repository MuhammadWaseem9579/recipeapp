<% if @recipe.errors.any? %>
  <% @recipe.errors.full_messages.each do |e| %>
    <h4><%= e %></h4>
  <% end %>
<% end %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe,class: "form-horizontal", role: "form") do |f| %>
      <div class="form-group">
        <div class="col-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="control-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter Recipe Name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, class: "form-control", placeholder: "Enter Recipe steps", autofocus: true %>
        </div>
      </div>
<br> 
      <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
      
    <% end %>
  </div>
</div>